    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug(C)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/${fileBasenameNoExtension}.exe",
            "args": ["-g","${file}","-o","${fileBasenameNoExtension}.exe","-std=c++11"],
            "stopAtEntry": false,
            "environment": [],
            "externalConsole": true,
            "cwd": "${workspaceFolder}",
            
            "preLaunchTask": "g++",
            "windows": {
                "MIMode": "gdb",
                "miDebuggerPath": "E://git//gcc//mingw64//bin//gdb.exe"
            },
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ], 
        },
        {
